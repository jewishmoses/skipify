{
    "manifest_version": 2,
    "name": "Skipify",
    "version": "1.0",
    "description": "Sratim.tv skipper, skips the 30 seconds wait!",
    "icons": {
        "48": "./logo.png"
    },
    "permissions": [
        "*://*.sratim.tv/*",
        "cookies",
        "webRequest"
    ],
    "homepage_url": "https://github.com/jewishmoses/skipify",
    "browser_specific_settings": {
        "gecko": {
            "update_url": "https://raw.githubusercontent.com/jewishmoses/skipify/main/updates.json"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.sratim.tv/*"
            ],
            "js": [
                "generator.js",
                "skipify.js"
            ]
        }
    ]
}